---
import type { IconType } from "react-icons"

export interface Props {
  icon: IconType
  size?: "sm" | "lg";
  className?: string;
}

const { icon: Icon, size, className } = Astro.props;
const heightStyle = size === "sm" ? "w-3.5 h-3.5" : "w-4 h-4";
---
<Icon className={`${heightStyle} ${className ?? ""}`} />
