---
import Datetime from "./Datetime.astro";
import type { BlogFrontmatter, ProjectFrontmatter } from "@content/_schemas";

export interface Props {
  href?: string;
  frontmatter: BlogFrontmatter | ProjectFrontmatter;
  secHeading?: boolean;
}

const { href, frontmatter, secHeading } = Astro.props;
const { title, publishedAt, description, type } = frontmatter;
---
<li class="my-6">
  <a
    href={href}
    class="inline-block text-lg font-medium text-skin-accent decoration-dashed underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0"
  >
    {secHeading ? (
      <h2 class="text-lg font-medium decoration-dashed hover:underline" transition:name={title}>
        {title}
      </h2>
    ) : (
      <h3 class="text-lg font-medium decoration-dashed hover:underline" transition:name={title}>
        {title}
      </h3>
    )}
  </a>
  <Datetime datetime={publishedAt} postTitle={title} type={type} />
  <p>{description}</p>
</li>
